    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:visibility="gone"
            android:src="@mipmap/diamond_index" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="新手指南"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_index_001"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <!--底盘分类-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_index_004"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <!--地盘推荐-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_index_005"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:visibility="gone"
            android:src="@mipmap/diamond_index" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="新品"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <com.taihuoniao.fineix.view.GridViewForScrollView
        android:id="@+id/recyclerView_index_002"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="false"
        android:horizontalSpacing="15dp"
        android:numColumns="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:verticalSpacing="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:visibility="gone"
            android:src="@mipmap/diamond_index" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="产品专辑"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_index_003"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <!--精选情境-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/diamond_index" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/choiceness_qingjing"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>