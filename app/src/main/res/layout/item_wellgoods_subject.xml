<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/subject_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/moka"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cc000000"
                    android:paddingBottom="7dp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingRight="16dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/subject_name"
                    android:layout_alignRight="@id/subject_name"
                    android:layout_below="@id/subject_name"
                    android:background="@color/yellow_bd8913"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/subject_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/subject_label"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/subject_wenzhang"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/sanjiao"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_below="@id/relative"
        android:background="#f8f8f8"
        />
</RelativeLayout>