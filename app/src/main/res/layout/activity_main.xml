<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/activity_main_bottomlinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_no_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_main_homepagebtn"
            style="@style/MainButtonStyle"
            android:src="@drawable/main_tab_homepage_selector"/>

        <ImageView
            android:id="@+id/activity_main_findbtn"
            style="@style/MainButtonStyle"
            android:src="@drawable/main_tab_find_selector"/>

        <ImageView
            android:id="@+id/activity_main_scenebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/scene"/>

        <ImageView
            android:id="@+id/activity_main_shopbtn"
            style="@style/MainButtonStyle"
            android:src="@drawable/main_tab_shop_selector"/>

        <ImageView
            android:id="@+id/activity_main_minebtn"
            style="@style/MainButtonStyle"
            android:src="@drawable/main_tab_mine_selector"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_main_fragment_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_main_bottomlinear"></RelativeLayout>
</RelativeLayout>
