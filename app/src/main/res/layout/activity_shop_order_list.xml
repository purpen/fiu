<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_order"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/yellow_bd8913"
        app:tabSelectedTextColor="@color/yellow_bd8913"
        app:tabTextColor="#333333"/>

    <!-- 切换内容区 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpaer_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
