<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:orientation="vertical">

    <com.taihuoniao.fineix.view.SlidingFocusImageView
        android:id="@+id/sfiv"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:spacing="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="491"
            android:background="@mipmap/product_left_label"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="大江无人机X350"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/img_fiu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="74"
            android:src="@mipmap/product_fiu"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="168"
            android:background="@mipmap/product_right_label"
            android:gravity="center"
            android:text="￥288"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            />
    </LinearLayout>
</LinearLayout>