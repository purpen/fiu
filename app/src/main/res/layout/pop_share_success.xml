<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white_4dp"
                android:paddingBottom="40dp"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/share_success_background"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="分享成功！"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/big_coin"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/img"
            android:text="+ 20"
            android:textColor="@color/yellow_bd8913"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/img"
            android:layout_toRightOf="@id/img"
            android:src="@mipmap/small_coin"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您获得"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#222222"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个积分奖励! ~"
            android:textColor="#666666"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/pop_share_success_btn"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/yellow_corner_white"
        android:text="知道了"
        android:textColor="@color/yellow_bd8913"
        android:textSize="16sp"/>
</RelativeLayout>