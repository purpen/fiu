<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_good_list_first_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="91dp"/>


    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/goods_category"
            android:textColor="@color/black333333"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/activity_good_list_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/back_black"/>

        <RelativeLayout
            android:id="@+id/activity_good_list_cart_relative"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:src="@mipmap/cart"/>

            <TextView
                android:id="@+id/activity_good_list_cart_number"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/yellow_circle"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_relative"
        android:background="#eaeaea"/>

    <com.taihuoniao.fineix.view.CustomSlidingTab
        android:id="@+id/activity_good_list_first_sliding"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/line2"
        app:pstsIndicatorHeight="2dp"
        app:pstsTabPaddingLeftRight="10dp"
        app:pstsIsDivierShow="false"
        app:pstsUnderlineHeight="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/activity_good_list_first_sliding"
        android:background="#e2e2e2"/>


</RelativeLayout>