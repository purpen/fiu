<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fafbfd"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="编辑产品"
            android:textColor="#999999"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/pop_edit_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
      />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="49dp"
        android:paddingRight="49dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pop_edit_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/background_corner_gray"
                android:gravity="center_vertical"
                android:hint="@string/input_product_title"
                android:paddingLeft="19dp"
                android:singleLine="true"
                android:textColor="@color/title_black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/pop_edit_name_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/black_corner_white"
                android:gravity="center_vertical"
                android:paddingLeft="19dp"
                android:singleLine="true"
                android:textColor="@color/title_black"
                android:textSize="15sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_corner_gray"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¥"
                    android:textColor="@color/title_black"/>

                <EditText
                    android:id="@+id/pop_edit_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/title_black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/pop_edit_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/title_black"
                    android:textSize="15sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/pop_edit_delete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yellow_corner_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="删除产品"
        android:textColor="@color/yellow_bd8913"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="46dp"
        android:background="#e2e2e3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_edit_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black333333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/pop_edit_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow_bd8913"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>