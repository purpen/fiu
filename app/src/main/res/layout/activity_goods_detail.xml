<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品详情"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/activity_goods_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/back_black"/>

        <RelativeLayout
            android:id="@+id/activity_goods_detail_cart_relative"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:src="@mipmap/cart"/>

            <TextView
                android:id="@+id/activity_goods_detail_cart_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cart_num_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.taihuoniao.fineix.view.ScrollableView
                android:id="@+id/activity_goods_detail_scrollableView"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e9e9e9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                >

                <TextView
                    android:id="@+id/activity_goods_detail_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="fitbit HR智能手环"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/activity_goods_detail_goods_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="¥ 799.00"
                    android:textColor="#ff3366"
                    android:textSize="11sp"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="品牌"
                    android:textColor="#212121"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e4e4e4"/>

                <RelativeLayout
                    android:id="@+id/activity_goods_detail_brand_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/activity_goods_detail_brand_img"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"/>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right_gray"/>

                    <TextView
                        android:id="@+id/activity_goods_detail_brand_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:layout_toLeftOf="@id/arrow"
                        android:layout_toRightOf="@id/activity_goods_detail_brand_img"
                        android:singleLine="true"
                        android:text="colorstar"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <!--<TextView-->
                    <!--android:id="@+id/activity_goods_detail_brand_des"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/activity_goods_detail_brand_title"-->
                    <!--android:layout_marginLeft="26dp"-->
                    <!--android:layout_marginTop="12dp"-->
                    <!--android:layout_toRightOf="@id/activity_goods_detail_brand_img"-->
                    <!--android:lineSpacingExtra="4dp"-->
                    <!--android:text="啊收到了饭卡上露脸的看飞机阿拉山口大家的方法两款手机的方法理论考试的代理费卡死了打开房间啊；啦开始觉得阿三；了打开附件；啊势力对抗肌肤；拉萨扩大解放；拉开松井大辅；卢卡斯京东方；卢卡斯吉多；了饭卡；谁的离开房间啊势力对抗肌肤；阿里山可见度发；拉开松井大辅；绿卡技术的；了饭卡；势力对抗肌肤；啦空手道解放；垃圾是的；分厘卡是；灯笼裤飞机阿拉山口低价房；拉开松井大辅；卢卡斯的；了饭卡；顺利打开就发；了深刻的飞机啊；螺丝扣搭街坊；两节课；"-->
                    <!--android:textColor="#333333"-->
                    <!--android:textSize="10sp"-->
                    <!--android:visibility="gone"/>-->
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="19dp"
                    android:text="商品描述"
                    android:textColor="#212121"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e4e4e4"/>

                <TextView
                    android:id="@+id/activity_goods_detail_product_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:paddingBottom="25dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="118dp"
                    android:paddingTop="16dp"
                    android:text="啊；是镂空雕刻技法卢卡斯京东方；绿卡技术的；浪费卡死了；打开附件；阿拉山口大家发了时刻记得发；啊看似简单方法；看见撒旦的；发了卡死了的看法奖励空间；卢卡斯京东方；卡死了的；饭卡；螺丝扣搭街坊；了拉开松井大辅发"
                    android:textColor="#333333"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="19dp"
                    android:text="所属场景"
                    android:textColor="#212121"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e2e2e2"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_goods_detail_suoshuchangjing_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="相关推荐"
                    android:textColor="#212121"
                    android:textSize="13sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_goods_detail_recommend_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5"/>


            <Button
                android:id="@+id/activity_goods_detail_buy_now"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="#bd8913"
                android:text="去购买"
                android:textColor="@color/white"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#e2e2e2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>