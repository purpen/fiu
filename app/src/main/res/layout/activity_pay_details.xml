<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/image_paydetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/success" />

        <TextView
            android:id="@+id/tv_success_or_failed_pay_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="60dp"
            android:text="您的订单已支付成功！"
            android:textColor="@color/color_333"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout style="@style/pay_order_details_linear">

        <TextView
            style="@style/pay_order_details_left_tv"
            android:text="订单编号：" />

        <TextView
            android:id="@+id/tv_number_order_details"
            style="@style/pay_order_details_right_tv" />
    </LinearLayout>

    <LinearLayout style="@style/pay_order_details_linear">

        <TextView
            style="@style/pay_order_details_left_tv"
            android:text="支付方式：" />

        <TextView
            android:id="@+id/tv_payway_order_details"
            style="@style/pay_order_details_right_tv" />
    </LinearLayout>

    <LinearLayout style="@style/pay_order_details_linear">

        <TextView
            style="@style/pay_order_details_left_tv"
            android:text="下单时间：" />

        <TextView
            android:id="@+id/tv_time_order_details"
            style="@style/pay_order_details_right_tv" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_look_order_pay_details"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:text="查看订单详情"
        android:textColor="@color/color_af8323"
        android:textSize="17sp" />
</LinearLayout>
