<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_white_4dp"
        android:orientation="vertical"
        android:padding="@dimen/dp20"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sao_yi_sao"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp16"
            android:layout_marginBottom="@dimen/dp10"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/save_qrcode"
            android:textColor="@color/color_666"
            android:layout_marginTop="@dimen/dp10"
            />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="https://www.taihuoniao.com"
            android:textColor="@color/color_222"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            />

        <Button
            android:id="@+id/btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_copy_link"
            android:text="@string/copy_link"
            android:textColor="@color/yellow_bd8913"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ibtn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/dialog_close" />
</LinearLayout>