<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_goodsdetails_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/activity_goodsdetails_pointlinear"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/activity_goodsdetails_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_goodsdetails_saleprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3366"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/activity_goodsdetails_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#999999"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/activity_goodsdetails_morecolor"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/colorimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/colorimg"
            android:gravity="center_vertical"
            android:text="颜色分类"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="相关推荐"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <com.taihuoniao.fineix.view.GridViewForScrollView
            android:id="@+id/activity_goodsdetails_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="5dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/activity_goodsdetails_comments"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/commentsimg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:src="@mipmap/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_toLeftOf="@id/commentsimg"
                android:gravity="center_vertical"
                android:text="商品评价"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f4f4f4"/>

        <com.taihuoniao.fineix.view.ListViewForScrollView
            android:id="@+id/activity_gooddetails_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scrollbars="none"/>

        <TextView
            android:id="@+id/activity_goodsdetails_emptytv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="暂无评论"
            android:textColor="#999999"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_goodsdetails_morecommentstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="更多评论>>"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/activity_goodsdetails_goodsrelative"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_goodsdetails_goodsredline"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/red_line"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/activity_goodsdetails_goodstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="产品详情"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f4f4f4"/>

        <RelativeLayout
            android:id="@+id/activity_goodsdetails_commentsrelative"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_goodsdetails_commentsredline"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/red_line"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/activity_goodsdetails_commentstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="商品评价"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="--上拉查看商品详情--"
        />
</LinearLayout>