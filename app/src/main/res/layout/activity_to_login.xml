<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@mipmap/reg_login_blur"
    android:scrollbars="none"
    android:fadingEdge="none"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp40">

            <ImageView
                android:id="@+id/image_back_tologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp16"
                android:src="@mipmap/back_white" />

            <ImageView
                android:id="@+id/image_close_tologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp16"
                android:src="@mipmap/close" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_third_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                    android:text="通过以下方式快速登录"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_weixin_tologin"
                    style="@style/ToRegisterAndLogin"
                    android:background="@drawable/shap_weixin"
                    android:text="微信" />

                <TextView
                    android:id="@+id/tv_weibo_tologin"
                    style="@style/ToRegisterAndLogin"
                    android:background="@drawable/shap_xinlang_weibo"
                    android:text="新浪微博" />

                <TextView
                    android:id="@+id/tv_qq_tologin"
                    style="@style/ToRegisterAndLogin"
                    android:background="@drawable/shap_qq"
                    android:text="腾讯QQ" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="bottom"
                    android:text="用手机号登录"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_phone_number_tologin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/shap_home_gridview"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="手机号"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/RegisterAndLogin"
                    android:background="@drawable/shap_home_gridview"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/et_password"
                    style="@style/RegisterAndLogin"
                    android:background="@drawable/shap_home_gridview"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:paddingLeft="5dip"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/bt_login"
                    style="@style/RegisterAndLogin"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shap_redbutton_commit"
                    android:onClick="onLogin"
                    android:text="登录"
                    android:textColor="@android:color/white" />


                <TextView
                    android:id="@+id/tv_find_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:padding="@dimen/dp10"
                    android:text="忘记密码?"
                    android:textColor="@color/color_333"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
