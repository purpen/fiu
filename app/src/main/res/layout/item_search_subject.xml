<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingTop="15dp"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/subject_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/moka"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cc000000"
                    android:ellipsize="end"
                    android:paddingBottom="7dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:text="一次骑行的约会"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/subject_name"
                    android:layout_alignRight="@id/subject_name"
                    android:layout_below="@id/subject_name"
                    android:background="@color/yellow_bd8913"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/subject_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="a date of youth"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/subject_label"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/subject_wenzhang"/>
    </RelativeLayout>
</RelativeLayout>