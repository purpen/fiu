<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/activity_search_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:paddingRight="20dp"
            android:src="@mipmap/back_black"/>

        <TextView
            android:id="@+id/activity_search_cancel"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#4a494a"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/activity_search_cancel"
            android:layout_toRightOf="@id/activity_search_back"
            android:background="@drawable/background_corner_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:src="@mipmap/search_height_26px"/>

            <ImageView
                android:id="@+id/activity_search_delete"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@mipmap/cancel_gray"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/activity_search_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/activity_search_delete"
                android:layout_toRightOf="@id/search"
                android:background="@null"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="13sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/activity_search_qjrelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_search_qjtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="情景"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/activity_search_qjline"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignLeft="@id/activity_search_qjtv"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/activity_search_qjtv"
                android:background="@color/yellow_bd8913"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_search_cjrelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_search_cjtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="场景"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/activity_search_cjline"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignLeft="@id/activity_search_cjtv"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/activity_search_cjtv"
                android:background="@color/yellow_bd8913"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_search_productrelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/activity_search_producttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="产品"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/activity_search_productline"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignLeft="@id/activity_search_producttv"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/activity_search_producttv"
                android:background="@color/yellow_bd8913"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <FrameLayout
        android:id="@+id/activity_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>