<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp150"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置账号密码"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"
            android:layout_marginBottom="@dimen/dp32" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                style="@style/RegisterAndLogin"
                android:background="@drawable/shape_login_register"
                android:hint="输入6位以上密码"
                android:layout_marginTop="0dp"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@color/color_666"
                android:paddingLeft="@dimen/dp8"
                android:maxLength="50"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/ibtn_show_hide"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:src="@mipmap/pass_hide"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginRight="@dimen/dp32" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_complete_register"
            style="@style/RegisterAndLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp24"
            android:background="@drawable/shape_login_register"
            android:text="完成注册"
            android:textColor="@color/color_af8323" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp12"
            android:text="@string/user_protocol"
            android:layout_marginTop="@dimen/dp32" />
    </LinearLayout>

</RelativeLayout>