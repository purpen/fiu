<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:makeramen="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:orientation="vertical"
    >


    <com.taihuoniao.fineix.view.GlobalTitleLayout
        android:id="@+id/activity_create_scene_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:orientation="vertical"
            android:paddingBottom="172dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"
                >

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:id="@+id/activity_create_scene_img"
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/activity_create_scene_contentedt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="添加描述"
                    android:textColorHint="#999999"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"/>

            <EditText
                android:id="@+id/activity_create_scene_titleedt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="添加标题"
                android:paddingLeft="15dp"
                android:textColorHint="#999999"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/location_34"/>

                <TextView
                    android:id="@+id/activity_create_scene_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加地点"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_create_scene_recycler"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/location_34"/>

                <ImageView
                    android:id="@+id/activity_create_scene_deleteaddress"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@mipmap/cancel_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/activity_create_scene_deleteaddress"
                    android:layout_toRightOf="@id/location"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/activity_create_scene_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/black333333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/activity_create_scene_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_create_scene_address"
                        android:layout_marginTop="6dp"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textSize="11sp"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <RelativeLayout
                android:id="@+id/activity_create_scene_labelrelative"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="14dp"
                    android:src="@mipmap/arrow_right_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="标签"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/activity_create_scene_labellinear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <RelativeLayout
                android:id="@+id/activity_create_scene_qingjing"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="14dp"
                    android:src="@mipmap/arrow_right_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="所属情景"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:id="@+id/activity_create_scene_qingjinglinear"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>