<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f7f7f7"
                android:orientation="vertical">


    <com.taihuoniao.fineix.view.GlobalTitleLayout
        android:id="@+id/activity_create_scene_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/activity_create_scene_titlelayout"
        android:background="#ebebeb"/>

    <ScrollView
        android:id="@+id/activity_create_scene_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:background="#f7f7f7"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:orientation="vertical"
            android:paddingBottom="172dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/activity_create_scene_select_enviroment"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:text="@string/search_envir"
                    android:textColor="#717171"
                    android:textSize="11sp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/activity_create_scene_titleedt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_toLeftOf="@id/activity_create_scene_select_enviroment"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="@string/input_more_twenty"
                    android:imeOptions="actionDone"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:textColorHint="#999999"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"
                >

                <ImageView
                    android:id="@+id/activity_create_scene_img"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/default_background_750_1334"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/activity_create_scene_contentedt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/add_des"
                    android:singleLine="false"
                    android:textColorHint="#999999"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"/>


            <RelativeLayout
                android:id="@+id/activity_create_scene_add_addresslinear"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:src="@mipmap/location_yellow"/>

                <ImageView
                    android:id="@+id/activity_create_scene_deleteaddress"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@mipmap/cancel_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/activity_create_scene_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/activity_create_scene_deleteaddress"
                    android:layout_toRightOf="@id/location"
                    android:text="@string/add_address"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_create_scene_recycler"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>


            <RelativeLayout
                android:id="@+id/activity_create_scene_labelrelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:minHeight="45dp"
                >

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="14dp"
                    android:src="@mipmap/arrow_right_gray"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/label_create"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/label_create"/>

                <TextView
                    android:id="@+id/activity_create_scene_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/label_create"
                    android:text="@string/label"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>

                <com.taihuoniao.fineix.view.FlowLayout
                    android:id="@+id/activity_create_scene_label_flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/label_create"
                    app:horizontalSpacing="10dp"
                    app:verticalSpacing="10dp"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:id="@+id/activity_create_scene_recommend_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/recommend_labels"
                    android:textColor="#999999"
                    android:textSize="11sp"/>

                <com.taihuoniao.fineix.view.FlowLayout
                    android:id="@+id/activity_create_scene_recommend_flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:horizontalSpacing="10dp"
                    app:verticalSpacing="10dp"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/activity_create_scene_label_horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/activity_create_scene_labellinear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <RelativeLayout
                android:id="@+id/activity_create_scene_qingjing"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="14dp"
                    android:src="@mipmap/arrow_right_gray"/>

                <ImageView
                    android:id="@+id/dipan_create"
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/dipan_create"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/dipan_create"
                    android:gravity="center_vertical"
                    android:text="@string/belong_what_qingjing"
                    android:textColor="@color/black333333"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:id="@+id/activity_create_scene_qingjinglinear"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:visibility="gone">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>