<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_brand_list1_tv"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:paddingLeft="27dp"
        android:text="A"
        android:textColor="#222222"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/item_brand_list_rl"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
            android:id="@+id/item_brand_list_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher"
            app:riv_border_color="#cccccc"
            app:riv_border_width="1dp"
            app:riv_corner_radius="100dp"/>

        <TextView
            android:id="@+id/item_brand_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/item_brand_list_img"
            android:text="小米科技"
            android:textColor="#292929"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="#e6e6e6"/>
    </RelativeLayout>

</RelativeLayout>