<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="211dp">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/background_container"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="14dp"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:paddingTop="34dp"
        android:textColor="#333333"
        android:textSize="12sp"/>

    <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
        android:id="@+id/title_img"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_above="@id/des"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-22dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="100dp"
        />

    <RelativeLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/des"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="产品列表"
                android:textColor="@color/yellow_bd8913"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/qj_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="情境"
                android:textColor="@color/color_666"
                android:textSize="13sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line_container"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow_bd8913"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#e2e2e2"/>
    </RelativeLayout>


</RelativeLayout>