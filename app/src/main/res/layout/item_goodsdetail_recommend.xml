<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:background="@drawable/grey_no_corner">

        <ImageView
            android:id="@+id/item_goodsdetail_recommend_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/item_goodsdetail_recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:minLines="2"
          android:textColor="#666666"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="153dp"
        android:layout_height="1px"
        android:background="#ededed"/>

    <TextView
        android:id="@+id/item_goodsdetail_recommend_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/yellow_bd8913"
        android:textSize="11sp"/>
</LinearLayout>