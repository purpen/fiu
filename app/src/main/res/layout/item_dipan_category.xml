<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
    >

    <TextView
        android:id="@+id/item_dipan_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="推荐"
        android:textColor="@color/black333333"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_dipan_category_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/item_dipan_category_tv"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_alignRight="@id/item_dipan_category_tv"
        android:background="@color/yellow_bd8913"/>
</RelativeLayout>