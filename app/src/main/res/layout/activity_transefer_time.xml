<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f4f4f4"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.taihuoniao.fineix.view.MyGlobalTitleLayout
        android:id="@+id/activity_transfer_time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/activity_transfer_time_anylinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/grey_no_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_transfer_time_anyimg"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/check"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/transfer_time_a"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_transfer_time_worklinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/grey_no_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_transfer_time_workimg"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/check"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/transfer_time_b"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_transfer_time_restlinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/grey_no_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_transfer_time_restimg"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/check"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/transfer_time_c"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>