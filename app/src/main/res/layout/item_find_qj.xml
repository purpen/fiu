<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f8f8f8"
              android:orientation="horizontal"
              android:paddingBottom="15dp"
    >

    <LinearLayout
        android:id="@+id/qj_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/qj_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/qj_background_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <RelativeLayout
                android:id="@+id/qj_bottom_container1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@id/qj_background_img1"
                android:layout_alignRight="@id/qj_background_img1"
                android:layout_below="@id/qj_background_img1"
                android:background="#212121"
                android:paddingLeft="10dp">

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:id="@+id/qj_head_img1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    app:riv_border_color="#4a4a4a"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="100dp"/>

                <ImageView
                    android:id="@+id/qj_love1"
                    android:layout_width="35.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/find_love"/>

                <TextView
                    android:id="@+id/qj_name1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/qj_love1"
                    android:layout_toRightOf="@id/qj_head_img1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/qj_title1_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/qj_bottom_container1"
                android:layout_marginBottom="10dp"
                android:background="@color/black_touming_80"
                android:maxWidth="135dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/qj_title1_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/qj_title1_tv1"
                android:layout_marginBottom="3dp"
                android:background="@color/black_touming_80"
                android:maxWidth="135dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qj_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/qj_background_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <RelativeLayout
                android:id="@+id/qj_bottom_container2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@id/qj_background_img2"
                android:layout_alignRight="@id/qj_background_img2"
                android:layout_below="@id/qj_background_img2"
                android:background="#212121"
                android:paddingLeft="10dp">

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:id="@+id/qj_head_img2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    app:riv_border_color="#4a4a4a"
                    app:riv_border_width="1dp"
                    app:riv_corner_radius="100dp"/>

                <ImageView
                    android:id="@+id/qj_love2"
                    android:layout_width="35.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/find_love"/>

                <TextView
                    android:id="@+id/qj_name2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/qj_love2"
                    android:layout_toRightOf="@id/qj_head_img2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/qj_title2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/qj_bottom_container2"
                android:layout_marginBottom="10dp"
                android:background="@color/black_touming_80"
                android:maxWidth="135dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/qj_title2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/qj_title2_tv1"
                android:layout_marginBottom="3dp"
                android:background="@color/black_touming_80"
                android:maxWidth="135dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                 android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/subject_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="211dp">

        <ImageView
            android:id="@+id/subject_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/moka"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cc000000"
                    android:paddingBottom="7dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="7dp"
                     android:textColor="@color/white"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/subject_name"
                    android:layout_alignRight="@id/subject_name"
                    android:layout_below="@id/subject_name"
                    android:background="@color/yellow_bd8913"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/subject_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/subject_label"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/subject_wenzhang"/>
    </RelativeLayout>
</LinearLayout>