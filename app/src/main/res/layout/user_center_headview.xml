<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp250">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/person_center_bg"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:id="@+id/ll_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">
            <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                android:id="@+id/riv"
                app:riv_corner_radius="@dimen/dp100"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                app:riv_border_color="@android:color/white"
                app:riv_border_width="@dimen/dp1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp60"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="boc747"
                android:layout_marginBottom="@dimen/dp5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp5"
                android:text="追寻风在北漂"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp12"
                    />
                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp12"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@null"
            android:src="@mipmap/authentication"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/ll_btn_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/bt_focus"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shap_redbutton_commit"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

            <Button
                android:id="@+id/bt_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/shap_redbutton_commit"
                android:text="私信"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_cj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/cj"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场景"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp5"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_qj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/scene"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情景"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp5"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/focus"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp5"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_fans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/favorites"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>
    <!--<RelativeLayout
        android:id="@+id/fl_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>-->
</LinearLayout>