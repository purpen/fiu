<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_blur"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_back_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9" />

        <ImageView
            android:id="@+id/image_close_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@mipmap/close" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp" />
    <TextView
        android:id="@+id/tv_introduce_tologin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="bottom"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:text="通过手机号找回密码"/>

    <EditText
        android:id="@+id/user"
        style="@style/RegisterAndLogin"
        android:paddingLeft="5dp"
        android:ems="8"
        android:hint="手机号"
        android:maxLength="11"
        android:phoneNumber="true"
        android:singleLine="true"
        android:background="@drawable/shap_home_gridview">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="发送验证码"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:background="@drawable/shap_redbutton_commit"
        android:onClick="onRegister"/>
</LinearLayout>
