<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#444444"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                android:id="@+id/head_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:riv_border_width="1px"
                app:riv_border_color="#cccccc"
                app:riv_corner_radius="@dimen/dp100"
                android:src="@mipmap/default_head"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="8dp"
                android:maxLines = "1"
                android:textColor="#212121"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:maxLines = "1"
                android:textColor="#666666"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:maxLines = "1"
                android:textColor="#666666"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/follow_btn"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_corner_969696_nothing"
                android:text="+关注"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@mipmap/cancel_grey"/>
    </RelativeLayout>
</RelativeLayout>