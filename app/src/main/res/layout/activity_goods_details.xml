<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4"
                android:fitsSystemWindows="true">

    <com.taihuoniao.fineix.view.MyGlobalTitleLayout
        android:id="@+id/activity_goodsdetails_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/activity_goodsdetails_bottomlinear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_goodsdetails_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#da9d17"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/activity_goodsdetails_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/yellow_bd8913"
            android:gravity="center"
            android:text="@string/buy_now"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_goodsdetails_greyline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/activity_goodsdetails_bottomlinear"
        android:background="#f4f4f4"/>

    <com.taihuoniao.fineix.view.CustomScrollView
        android:id="@+id/activity_goodsdetails_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_goodsdetails_greyline"
        android:layout_below="@id/activity_goodsdetails_titlelayout"/>


</RelativeLayout>