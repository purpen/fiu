<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_box"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_head"
        android:scrollbars="none"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp16"
                android:text="@string/complete_info"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp10" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp60">

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:id="@+id/riv"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:src="@mipmap/default_head"
                    app:riv_border_color="@color/color_eee"
                    app:riv_border_width="@dimen/dp1"
                    app:riv_corner_radius="@dimen/dp100" />

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/camera"
                    app:riv_corner_radius="@dimen/dp100" />
            </RelativeLayout>

            <com.taihuoniao.fineix.view.SegmentedGroup
                android:id="@+id/radioGroup"
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp40"
                android:layout_below="@+id/rl"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp30"
                android:contentDescription="性别"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/secret"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="保密"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp12" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp12" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp12" />
            </com.taihuoniao.fineix.view.SegmentedGroup>

            <LinearLayout
                android:id="@+id/et_box"
                android:layout_below="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginRight="@dimen/dp40"
                android:layout_marginTop="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp10"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/sp12"
                    android:layout_marginRight="@dimen/dp5" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_radius5"
                    android:gravity="center"
                    android:hint="昵称"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_666"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@+id/et_box"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp40"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/border_radius5"
                android:gravity="center"
                android:hint="个性标签"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/sp12" />

            <EditText
                android:id="@+id/et_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@+id/tv_sign"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp40"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/border_radius5"
                android:gravity="center"
                android:hint="个性签名（最多15个字）"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/sp12" />

            <Button
                android:id="@+id/btn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/color_af8323"
                android:text="@string/complete_user_info"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
