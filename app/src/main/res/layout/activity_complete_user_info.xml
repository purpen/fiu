<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/custom_head"
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp80"
        >
        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
            android:id="@+id/riv"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            app:riv_corner_radius="@dimen/dp100"
            android:src="@mipmap/ic_launcher"
            />
        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            app:riv_corner_radius="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            />
    </RelativeLayout>

    <com.taihuoniao.fineix.view.SegmentedGroup
        android:id="@+id/radioGroup"
        android:contentDescription="性别"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/rl"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp30"
        >
        <RadioButton
            android:id="@+id/male"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_333"
            android:checked="true"
            android:gravity="center"
            android:textSize="@dimen/sp14"
            android:button="@null"
            android:text="男"
            />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="女"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/secret"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp14"
            android:gravity="center"
            android:text="保密"
            />
    </com.taihuoniao.fineix.view.SegmentedGroup>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius5"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:hint="昵称"
        android:singleLine="true"
        android:maxLength="30"
        android:textSize="@dimen/sp14"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_666"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_sign"
        android:layout_below="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:background="@drawable/border_radius5"
        android:hint="个性签名（最多30个字）"
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:textColorHint="@color/color_666"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shap_redbutton_commit"
        android:textSize="@dimen/sp14"
        android:text="@string/complete_user_info"
        android:textColor="@android:color/white" />
</RelativeLayout>