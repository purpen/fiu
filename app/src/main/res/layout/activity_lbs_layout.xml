<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_zoom_in"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_bt_map_jia" />

            <ImageButton
                android:id="@+id/ib_zoom_out"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_bt_map_jian" />

            <ImageButton
                android:id="@+id/ib_move_locate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="23dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/selector_ib_locate" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>