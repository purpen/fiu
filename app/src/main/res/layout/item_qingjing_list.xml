<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp"
                >

    <RelativeLayout
        android:id="@+id/item_qingjing_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_qingjing_list_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/jianbian_scenelist"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/item_qingjing_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_qingjing_list_title"
                android:src="@mipmap/location_white_width_16px"/>

            <TextView
                android:id="@+id/item_qingjing_list_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_qingjing_list_title"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/img"
                android:layout_toRightOf="@id/img"
                android:maxLines = "1"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/item_allqingjing_selectbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:scaleType="centerInside"
            android:src="@mipmap/select_qj"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>