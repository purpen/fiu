<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:paddingRight="2dp">

    <ImageView
        android:id="@+id/item_qingjing_list_background"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/location_white_width_16px"/>

        <TextView
            android:id="@+id/item_qingjing_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:singleLine="true"
            android:text="北京市 朝阳区"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_qingjing_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_linear"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:maxLines="2"
        android:maxWidth="104dp"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:paddingRight="3dp"
        android:paddingTop="4dp"
        android:text="哈哈哈哈哈哈哈噶"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</RelativeLayout>