<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.taihuoniao.fineix.view.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.taihuoniao.fineix.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/ll_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:scaleType="fitXY"
                android:src="@mipmap/image_close" />

            <ImageView
                android:id="@+id/image_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:scaleType="fitXY"
                android:src="@mipmap/image_scale" />
        </LinearLayout>
    </com.taihuoniao.fineix.blurview.BlurView>
</RelativeLayout>