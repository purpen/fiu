<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.taihuoniao.fineix.view.GlobalTitleLayout
        android:id="@+id/activity_add_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/search_radius_border"
        android:gravity="center"
        android:padding="@dimen/dp8"
        >

        <ImageView
            android:id="@+id/iv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:src="@mipmap/search_height_26px"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="null"
            android:layout_toRightOf="@+id/iv"
            android:hint="搜索产品"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"/>

    <com.taihuoniao.fineix.view.CustomSlidingTab
        android:id="@+id/activity_add_product_slidingtab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:pstsIndicatorHeight="4dp"
        app:pstsIsDivierShow="false"
        app:pstsUnderlineHeight="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_add_product_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        />

    <ImageView
        android:id="@+id/activity_add_product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:src="@mipmap/ic_launcher"
        />
</LinearLayout>