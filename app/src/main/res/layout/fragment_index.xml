<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.taihuoniao.fineix.main.fragment.IndexFragment">

    <com.taihuoniao.fineix.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/fragment_index_pullrefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>

    <RelativeLayout
        android:id="@+id/fragment_index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/head_logo" />

        <ImageView
            android:id="@+id/fragment_index_search"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/head_search"/>

        <ImageView
            android:id="@+id/fragment_index_subs"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:src="@mipmap/subscribe_height_40px"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/fragment_index_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fragment_index_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/search_nothing"
        android:visibility="gone"/>
</FrameLayout>
