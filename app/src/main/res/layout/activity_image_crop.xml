<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.taihuoniao.fineix.view.ImageCrop.ClipSquareImageView
        android:id="@+id/csiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_head"
        app:ClipSquareIV_BorderColor="@color/color_transparent"
        app:ClipSquareIV_BorderWidth="0dp"
        app:ClipSquareIV_OutsideColor="#cc000000" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp16">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:background="@drawable/border_radius5"
            android:text="取消"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/bt_clip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentRight="true"
            android:background="@drawable/shap_redbutton_commit"
            android:text="确定"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>