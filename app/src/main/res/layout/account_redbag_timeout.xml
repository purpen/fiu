<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/linear_bg_redbag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_timeout_redbag"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_thn_redbag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="太火鸟红包"
                android:textColor="@color/color_af8323"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_redbag_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="红包码：xxxxx"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_min_money"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:paddingBottom="17dp"
                android:text="最低使用限额：99元"
                android:textColor="@color/color_333"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_money_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_money"
              android:layout_alignBottom="@+id/tv_money"
                android:text="¥"
                android:textColor="@color/color_af8323"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="300"
                android:textColor="@color/color_af8323"
                android:textSize="40sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>