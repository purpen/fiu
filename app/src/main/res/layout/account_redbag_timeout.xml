<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/linear_bg_redbag"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@mipmap/bg_timeout_redbag"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingStart="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_thn_redbag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="@string/fiu_redbag"
                android:textColor="@color/color_af8323"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_redbag_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/redbag_code"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/tv_min_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/less_money"
                android:textColor="@color/color_333"
                android:layout_marginTop="@dimen/dp30"
                android:textSize="@dimen/sp10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="right">
            <TextView
                android:id="@+id/tv_money_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:textColor="@color/color_af8323"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp2"
                android:includeFontPadding="false"
                android:text="30"
                android:textColor="@color/color_af8323"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>