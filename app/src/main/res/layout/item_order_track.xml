<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="1dp"
        android:layout_height="93dp"
        android:layout_marginLeft="15.18dp"
        android:background="@mipmap/line_order_track_guide_line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/item_flag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:layout_marginLeft="0.5dp"
            android:src="@mipmap/icon_order_track_oval_current" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/item_flag"
            android:layout_alignTop="@id/item_flag"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item_flag"
            android:gravity="center_vertical"
            android:textColor="#BE8914"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_date"
            android:layout_below="@+id/item_date"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BE8914"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="#CCCCCC" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>