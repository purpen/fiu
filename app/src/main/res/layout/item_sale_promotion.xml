<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp210"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp210"
        android:background="@color/black20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/riv"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp5"
            android:maxLines = "1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp2" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:ellipsize="end"
            android:maxLines = "1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:drawableLeft="@mipmap/readed"
            android:drawablePadding="@dimen/dp5"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_during"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/during"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp10"
        android:text="@string/app_name"
        android:textColor="@color/color_ccc"
        android:drawablePadding="@dimen/dp5"
        android:textSize="@dimen/sp12" />

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:src="@mipmap/activity_finish"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
</RelativeLayout>
