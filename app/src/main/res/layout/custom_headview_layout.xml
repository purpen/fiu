<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/head_goback"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@null"
        android:padding="@dimen/dp16"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/head_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLength="18"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp16"
        android:visibility="gone" />
    <android.support.v7.widget.SearchView
        android:id="@+id/sv_head_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_center_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_head_shop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dp16"
        android:paddingLeft="@dimen/dp16"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/head_view_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
        <TextView
            android:id="@+id/tv_tip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/head_view_shop"
            android:background="@drawable/cart_num_bg"
            android:gravity="center"
            android:text="99+"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp10"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_head_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/rl_head_shop"
        android:layout_toLeftOf="@+id/rl_head_shop"
        android:layout_toStartOf="@+id/rl_head_shop"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:src="@mipmap/ic_launcher"
        android:background="@null"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_head_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dp16"
        android:textSize="@dimen/sp16"
        android:textColor="@color/color_333"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ddd" />
</RelativeLayout>