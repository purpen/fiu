<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white">

    <ImageButton
        android:id="@+id/head_goback"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_fff_eee"
        android:padding="@dimen/dp16"
        android:src="@mipmap/back_black"/>

    <ImageButton
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_fff_eee"
        android:padding="@dimen/dp16"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/head_goback"
        android:background="@drawable/search_radius_border"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:background="@null"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="@dimen/dp5"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp10"
            android:singleLine="true"
            android:textColorHint="@color/color_999"
            android:textSize="@dimen/sp14"
            />

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp16"
            android:background="@null"
            android:src="@mipmap/clear"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/head_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="18"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp16"
        android:visibility="gone"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/sv_head_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_center_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/head_logo"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_head_shop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/head_view_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_fff_eee"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/dp16"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_tip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/head_view_shop"
            android:background="@drawable/cart_num_bg"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="99+"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp10"
            android:visibility="gone"
            />
    </RelativeLayout>
    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_fff_eee"
        android:src="@mipmap/icon_more"
        android:padding="@dimen/dp16"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    <ImageButton
        android:id="@+id/iv_head_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/rl_head_shop"
        android:layout_toLeftOf="@+id/rl_head_shop"
        android:layout_toStartOf="@+id/rl_head_shop"
        android:background="@drawable/selector_fff_eee"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_head_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_fff_eee"
        android:gravity="center_vertical"
        android:padding="@dimen/dp16"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp16"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ddd"/>
</RelativeLayout>