<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_blur"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp45"
        >
        <ImageView
            android:id="@+id/image_back_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/back_white" />

        <ImageView
            android:id="@+id/image_close_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/close" />
    </RelativeLayout>
    <EditText
        android:id="@+id/user"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:ems="8"
        android:hint="手机号"
        android:maxLength="11"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:phoneNumber="true"
        android:singleLine="true">

    </EditText>


    <LinearLayout
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview">

        <EditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shap_home_gridview"
            android:ems="5"
            android:hint="验证码"
            android:textSize="14sp"
            android:maxLength="6"
            android:numeric="integer"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/vertify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/shap_getvertify"
            android:gravity="center"
            android:onClick="onSendVertifyCode"
            android:text="获取验证码"
            android:textColor="@color/red" />
    </LinearLayout>

    <EditText
        android:id="@+id/pass"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:ems="12"
        android:hint="请输入6-20位数字或字符密码"
        android:maxLength="12"
        android:paddingLeft="5dp"
        android:password="true" />


    <Button
        android:id="@+id/register"
        style="@style/RegisterAndLogin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shap_redbutton_commit"
        android:onClick="onRegister"
        android:text="注册"
        android:textColor="@android:color/white" />


</LinearLayout>
