<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/popup_scene_detail_more_pinglun"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="评论"
        android:textColor="@color/black333333"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>


    <TextView
        android:id="@+id/popup_scene_detail_more_share"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/black333333"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <LinearLayout
        android:id="@+id/popup_scene_detail_more_bianji_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_scene_detail_more_bianji"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/black333333"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2"/>
    </LinearLayout>


    <TextView
        android:id="@+id/popup_scene_detail_more_jubao"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="举报"
        android:textColor="@color/black333333"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <TextView
        android:id="@+id/popup_scene_detail_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black333333"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>
</LinearLayout>