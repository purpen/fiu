<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pullrefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.taihuoniao.fineix.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/pull_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        pullrefresh:actionViewId="@+id/action_view"
        pullrefresh:toolViewId="@+id/tool_view" >

        <!--<include-->
            <!--android:id="@+id/action_view"-->
            <!--layout="@layout/pull_refresh_refresh_layout" />-->

        <!--<include-->
            <!--android:id="@+id/tool_view"-->
            <!--layout="@layout/pull_refresh_tool_layout" />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_no_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/linear_look_redbag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="没有更多可用红包" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_look_redbag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="查看过期红包>>"
                        android:textSize="14sp"
                        android:textColor="@color/color_af8323"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </ScrollView>
    </com.taihuoniao.fineix.view.pulltorefresh.PullToRefreshListView>


</LinearLayout>
