<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_date_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="2016-3-10"
            android:textColor="#212121"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_status_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="交易状态"
            android:textColor="#666666"
            android:textSize="11sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/tv_freight_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="（含运费：¥ 6.00）"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_paymoney_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_freight_order"
            android:text="实付：¥ 6.00"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_totalmoney_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_paymoney_order"
            android:paddingRight="5dp"
            android:text="合计：¥ 6.00"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"/>

        <TextView
            android:id="@+id/tv_count_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_totalmoney_order"
            android:paddingRight="5dp"
            android:text="共1件商品"
            android:textSize="11sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/bt_left_order"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/bt_right_order"
            android:background="@drawable/yellow_corner_white"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="删除订单"
            android:textColor="@color/yellow_bd8913"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bt_right_order"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_corner_white"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="发表评价"
            android:textColor="@color/yellow_bd8913"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>