    <Button
        android:id="@+id/high_light_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="@dimen/dp20"
        android:minWidth="@dimen/dp60"
        android:text="@string/look_more"
        android:drawableRight="@mipmap/look_more"
        android:drawableEnd="@mipmap/look_more"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_222"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_666"
                android:text="@string/relate_scene" />

            <View
                android:id="@+id/line_rule"
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_af8323"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_participate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_participate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/relate_products"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_666" />

            <View
                android:id="@+id/line_participate"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_af8323"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="@string/shop_info"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_666" />

            <View
                android:id="@+id/line_result"
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_af8323"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>