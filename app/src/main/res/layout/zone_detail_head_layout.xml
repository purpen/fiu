<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taihuoniao.fineix.view.ScrollableView
        android:id="@+id/scrollableView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        />
    <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
        android:id="@+id/zone_logo"
        android:layout_width="@dimen/dp75"
        android:layout_height="@dimen/dp75"
        app:riv_corner_radius="100dp"
        app:riv_border_color="@color/color_ccc"
        app:riv_border_width="@dimen/dp05"
        android:src="@mipmap/default_load"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp16"
        />
    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:text="@string/app_name"
        android:textColor="@color/color_222"
        android:textSize="@dimen/sp17"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/roomRatingBar"
        android:id="@+id/ratingbar"
        android:rating="1.5"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp5"
        />
    <TextView
        android:id="@+id/average_spend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/average_spend"
        android:gravity="center"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_666"
        android:layout_marginTop="@dimen/dp5"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/take_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_coupon"
        android:drawableLeft="@mipmap/coupon_shop"
        android:drawablePadding="@dimen/dp5"
        android:textColor="@color/yellow_bd8913"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/dp5"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/shop_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp14"
        android:lineSpacingExtra="@dimen/dp3"
        android:layout_margin="@dimen/dp13"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/color_222"
        />
    <Button
        android:id="@+id/btn_spread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="@dimen/dp20"
        android:minWidth="@dimen/dp60"
        android:text="@string/look_more"
        android:drawableRight="@mipmap/look_more"
        android:drawableEnd="@mipmap/look_more"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_222"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:background="@color/color_eee"
        android:layout_margin="@dimen/dp15"
        />
    <TextView
        android:id="@+id/high_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/high_light"
        android:textSize="@dimen/sp14"
        android:textColor="@color/color_666"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="vertical"
        >

    </LinearLayout>
