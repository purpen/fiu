<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.taihuoniao.fineix.view.CustomSlidingTab
        android:id="@+id/custom_sliding_tab"
        android:layout_below="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        app:pstsIndicatorHeight="@dimen/dp4"
        app:pstsUnderlineHeight="@dimen/dp05"
        app:pstsCurIndicatorColor="@color/color_af8323"
        app:pstsTabPaddingLeftRight="@dimen/dp16"
        android:fillViewport="false"
        app:pstsShouldExpand="true"
        app:pstsIsDivierShow="false"
        app:pstsIndicatorColor="@color/color_af8323"
        />
    <com.taihuoniao.fineix.view.CustomViewPager
        android:id="@+id/custom_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_sliding_tab" />
</RelativeLayout>