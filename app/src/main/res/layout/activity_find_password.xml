<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/reg_login_blur"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/image_back_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/back_white" />
        <ImageView
            android:id="@+id/image_close_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="bottom"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:text="通过手机号快速找回密码"/>

    <EditText
        android:id="@+id/et_phone_new"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:inputType="phone"
        android:maxLength="11"
        android:ems="8" >
        <requestFocus />
    </EditText>

    <LinearLayout
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview">

        <EditText
            android:id="@+id/code_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shap_home_gridview"
            android:ems="5"
            android:textSize="14sp"
            android:hint="输入验证码"
            android:maxLength="6"
            android:inputType="text"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/verify_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/shap_getvertify"
            android:gravity="center"
            android:onClick="onSendVertifyCode"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="@color/color_af8323" />
    </LinearLayout>
    <EditText
        android:id="@+id/pass_new"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:ems="12"
        android:hint="设置新密码"
        android:maxLength="12"
        android:paddingLeft="5dp"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/bt_findpassword"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_redbutton_commit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onFindPassword"
        android:text="提交"
        android:textColor="@android:color/white"/>

</LinearLayout>
