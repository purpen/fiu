<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_subscribe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:text="@string/app_name"
        android:textSize="@dimen/sp12"
        android:background="@drawable/selector_fff_eee"
        android:textColor="@color/color_333"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:drawableRight="@mipmap/more" />
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/pull_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        android:background="@color/color_f7f7f7"
        android:numColumns="2"
        android:paddingLeft="@dimen/dp4"
        android:paddingRight="@dimen/dp4"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:verticalSpacing="@dimen/dp8"
        android:horizontalSpacing="@dimen/dp8"
        />
</LinearLayout>