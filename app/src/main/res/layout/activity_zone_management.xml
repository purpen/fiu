<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f8f8f8"
    >

    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_light_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.taihuoniao.fineix.view.CustomItemLayout
        android:id="@+id/item_zone_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        />

</LinearLayout>