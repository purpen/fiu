<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.taihuoniao.fineix.map.HotCitiesActivity">
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/color_f7f7f7"
        android:textSize="@dimen/sp14"
        android:text="定位城市"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp16"
        android:textColor="@color/color_333"
        />
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:drawableLeft="@mipmap/loaction"
        android:paddingLeft="@dimen/dp16"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp10"
        android:textColor="@color/color_333" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/color_f7f7f7"
        android:textSize="@dimen/sp14"
        android:text="热门城市"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp16"
        android:textColor="@color/color_333"
        />
    <GridView
        android:id="@+id/gv_hotcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp16"
        android:numColumns="3"
        android:background="@null"
        android:horizontalSpacing="@dimen/dp15"
        android:verticalSpacing="@dimen/dp15"
        android:scrollbars="none"
        />
</LinearLayout>