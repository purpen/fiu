<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp15"
    android:paddingBottom="@dimen/dp15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_below="@+id/tv_known_more"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
            android:id="@+id/riv"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@mipmap/default_head"
            app:riv_border_color="@color/color_eee"
            app:riv_border_width="@dimen/dp1"
            app:riv_corner_radius="@dimen/dp100" />

        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
            android:id="@+id/v"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/v"
            app:riv_corner_radius="@dimen/dp100"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_below="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:minLines="1"
        android:maxLines="1"
        android:textSize="@dimen/sp12"
        android:layout_marginTop="@dimen/dp5"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_below="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp2"
        android:ellipsize="end"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_666"
        android:maxLines="2"
        android:minLines="2" />

    <Button
        android:id="@+id/btn_focus"
        android:layout_below="@+id/tv_info"
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp30"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@drawable/shape_subscribe_theme"
        android:text="+ 关注"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp12" />
</RelativeLayout>