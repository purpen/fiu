<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.taihuoniao.fineix.view.GlobalTitleLayout
        android:id="@+id/title_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />



    <com.taihuoniao.fineix.view.ListViewForScrollView
        android:id="@+id/lv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="#f4f4f4"
        android:dividerHeight="5dp"
        android:layout_above="@+id/tv_commit_evaluate"
        android:layout_below="@id/title_evaluate" />

    <TextView
        android:id="@+id/tv_commit_evaluate"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>
