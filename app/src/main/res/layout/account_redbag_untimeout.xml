<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:id="@+id/linear_bg_redbag"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="horizontal"
        android:background="@mipmap/bg_untimeout_redbag"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_thn_redbag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/fiu_redbag"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/color_af8323"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_redbag_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp40">

                <TextView
                    android:id="@+id/tv_min_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp10" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/color_333"
                    android:layout_marginLeft="@dimen/dp5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_money_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_money"
                android:layout_toLeftOf="@+id/tv_money"
                android:text="Â¥"
                android:textColor="@color/color_af8323"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="30"
                android:textColor="@color/color_af8323"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp2"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>