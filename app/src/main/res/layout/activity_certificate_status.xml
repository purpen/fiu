<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f7f7f7"
    >
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_first_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:lineSpacingMultiplier="1.2"
            android:text="除了性别，您的每一处与众不同请认领或自拟标签申请认证，让您的主页脱颖而出。"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/btn_do_auth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/shap_redbutton_commit"
            android:text="申请官方认证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_certificating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@mipmap/certificating"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_below="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证信息已提交，等待审核中..."
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/dp10"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_no_pass"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@mipmap/no_pass"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_no_pass"
            android:layout_below="@+id/iv_no_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证信息未通过审核，被驳回！"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/dp10"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn"
            android:layout_below="@+id/tv_no_pass"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dp200"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/shap_redbutton_commit"
            android:text="重新申请官方认证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证信息"
            android:textColor="@color/color_333"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp16"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp16"
            android:background="@android:color/white"
            >
            <ImageView
                android:id="@+id/iv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_333"
                android:layout_marginTop="@dimen/dp5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改认证说明信息"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_333"
                />
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:padding="@dimen/dp5"
                android:textColor="@color/color_af8323"
                android:textSize="@dimen/sp12"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>