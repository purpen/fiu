<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4"
                android:fitsSystemWindows="true">

    <com.taihuoniao.fineix.view.GlobalTitleLayout
        android:id="@+id/activity_addnewaddress_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/activity_addnewaddress_commitbtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#ff3366"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_addnewaddress_commitbtn"
        android:layout_below="@id/activity_addnewaddress_title"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/activity_addnewaddress_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_product_white_corner"
            android:hint="收货人姓名"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/activity_addnewaddress_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_product_white_corner"
            android:hint="手机"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/activity_addnewaddress_postcode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_product_white_corner"
            android:hint="邮政编码"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/activity_addnewaddress_addresslinear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_product_white_corner"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:id="@+id/activity_addnewaddress_province"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="北京市"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/activity_addnewaddress_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="东城区"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/activity_addnewaddress_addressdetails"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_product_white_corner"
            android:hint="详细地址"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_product_white_corner"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="设为默认地址"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/activity_addnewaddress_isdefault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingBottom="7dp"
                android:paddingRight="12dp"
                android:paddingTop="7dp"
                android:src="@mipmap/switch_on"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>