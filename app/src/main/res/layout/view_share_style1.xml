<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/logo_fy"/>

    <RelativeLayout
        android:id="@+id/img_container"
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_background_750_1334"/>

        <TextView
            android:id="@+id/qj_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:background="@color/black"
            android:maxWidth="188dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/qj_title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/qj_title_tv"
            android:layout_marginBottom="3dp"
            android:background="@color/black"
            android:maxWidth="188dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/head_container"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true">

            <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                android:id="@+id/user_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_head"
                app:riv_border_color="#797979"
                app:riv_border_width="1px"
                app:riv_corner_radius="100dp"/>

            <ImageView
                android:id="@+id/v_img"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/v"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/head_container"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="7sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_time"/>

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#8e8e8e"
                    android:textSize="7sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/index_location"/>

                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#8e8e8e"
                    android:textSize="7sp"/>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_share"
            android:padding="8dp">

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:singleLine="false"
                android:textColor="#666666"
                android:textSize="7sp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="7dp"
                android:layout_below="@id/des"
                android:layout_marginTop="4dp"
                android:src="@mipmap/slogan"/>

            <ImageView
                android:layout_width="87dp"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/share_line"/>


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/share_erweima"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>