<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/activity_qingjingdetail_imgrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/activity_qingjingdetail_background"
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/jianbian_scenelist"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/activity_qingjingdetail_qingjing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:includeFontPadding="false"
                android:maxEms="9"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="23sp"/>


            <LinearLayout
                android:id="@+id/activity_qingjingdetail_addresslinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_marginLeft="17dp"
                    android:src="@mipmap/location_white_width_16px"/>

                <TextView
                    android:id="@+id/activity_qingjingdetail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="|"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/activity_qingjingdetail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_qingjingdetail_leftlabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="720"
                    android:background="@mipmap/white_label_left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                            android:id="@+id/activity_qingjingdetail_userhead"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:riv_border_color="#eeeeee"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="@dimen/dp100"/>

                        <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                            android:id="@+id/riv_auth"
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/v"
                            android:visibility="gone"
                            app:riv_corner_radius="@dimen/dp100"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/activity_qingjingdetail_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/activity_qingjingdetail_userinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/activity_qingjingdetail_username"
                            android:singleLine="true"
                            android:textColor="#212121"
                            android:textSize="10sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_qingjingdetail_subsnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="269"
                    android:background="@mipmap/subs_qingjing"
                    android:gravity="bottom|center_horizontal"
                    android:paddingBottom="7dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="138"
                    android:src="@mipmap/white_label_right"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/activity_qingjingdetail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:textColor="#212121"
            android:textSize="11sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/activity_qingjingdetail_more"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more_height_10px"
                android:visibility="gone"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/activity_qingjingdetail_more"
                android:layout_toStartOf="@id/activity_qingjingdetail_more"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/activity_qingjingdetail_labellinear"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:orientation="horizontal"
                    >

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/header_qingjing_detail_head_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:padding="16dp"
        >

        <com.taihuoniao.fineix.view.GridViewForScrollView
            android:id="@+id/activity_qingjingdetail_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:listSelector="@color/nothing"
            android:numColumns="8"
            android:verticalSpacing="15dp"/>

        <TextView
            android:id="@+id/activity_qingjingdetail_more_user"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/comment_numbers"
            android:gravity="center"
            android:text="300+"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:background="#f0f0f0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/jing_scene"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/sights_of_scene"
            android:textColor="#666666"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_qingjingdetail_emptyview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="75dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="@string/create_sight"
            android:textColor="#666666"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/create_sight_in_empty_scene"
            android:textColor="#666666"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/activity_qingjingdetail_createscene"
            android:layout_width="219dp"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/corner_yellow"
            android:gravity="center"
            android:text="@string/create_sight_empty_scene"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>