<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/person_center_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/iv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:paddingTop="@dimen/dp10"
                        android:src="@mipmap/personal_detail" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/head_logo"
                        />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16"
                        android:paddingTop="@dimen/dp10"
                        android:src="@mipmap/calendar"
                        android:visibility="gone" />
                </RelativeLayout>

                <com.taihuoniao.fineix.view.roundImageView.RoundedImageView
                    android:id="@+id/riv"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp70"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher"
                    app:riv_corner_radius="@dimen/dp100" />

                <TextView
                    android:id="@+id/tv_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp2"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp2"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp12" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@null"
                    android:src="@mipmap/authentication" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_qj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/focus"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_qj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="情景"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/ll_cj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/favorites"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="场景"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/ll_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/focus"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/ll_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/favorites"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
            </LinearLayout>

            <com.taihuoniao.fineix.view.CustomGridView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:numColumns="5"
                android:paddingBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:verticalSpacing="@dimen/dp10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:background="@color/color_ddd" />

            <com.taihuoniao.fineix.view.CustomItemLayout
                android:id="@+id/item_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.taihuoniao.fineix.view.CustomItemLayout
                android:id="@+id/item_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.taihuoniao.fineix.view.CustomItemLayout
                android:id="@+id/item_partner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79000000"
        android:clickable="true"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_register"
            android:layout_width="300dp"
            android:layout_height="@dimen/dp60"
            android:layout_centerInParent="true"
            android:text="登录/注册"
            android:textColor="@color/color_af8323"
            android:textSize="16sp" />

    </RelativeLayout>
</FrameLayout>
