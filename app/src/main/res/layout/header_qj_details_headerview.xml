<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <com.taihuoniao.fineix.view.ListViewForScrollView
        android:id="@+id/listViewForScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="false" />

    <com.taihuoniao.fineix.view.ListViewForScrollView
        android:id="@+id/listViewForScrollView_qj_details_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#f4f4f4"
        android:divider="@null"
        android:visibility="visible"
        android:dividerHeight="0dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp15"
            android:layout_weight="1"
            android:text="猜你喜欢"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dp15"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:text="更多好货"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>


    <com.taihuoniao.fineix.view.GridViewForScrollView
        android:id="@+id/recyclerView_index_002"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="false"
        android:horizontalSpacing="15dp"
        android:numColumns="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:verticalSpacing="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp15"
            android:layout_weight="1"
            android:text="情境推荐"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dp15"
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:drawableRight="@mipmap/arrow_right_gray"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>