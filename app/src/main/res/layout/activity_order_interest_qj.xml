<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.taihuoniao.fineix.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv"
        android:layout_below="@+id/custom_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="现在你可以订阅感兴趣的情景来开始"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_666"
        />
    <com.taihuoniao.fineix.view.SlidingFocusImageView
        android:id="@+id/sfiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_above="@+id/ll"
        android:unselectedAlpha="0.5"
        android:spacing="10dp"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp80"
        android:layout_marginBottom="@dimen/dp15"
        >
        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_af8323"
            android:textSize="@dimen/sp14"
            android:text="0"
            />
        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_333"
            android:text="/15"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shap_redbutton_commit"
        android:textSize="@dimen/sp14"
        android:text="下一步"
        android:textColor="@android:color/white" />
</RelativeLayout>