<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_blur"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_back_bindPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/back_white" />

        <ImageView
            android:id="@+id/image_close_bindPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp16"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:text="绑定已注册过的手机号"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/et_phone_bindPhone"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:ems="8"
        android:hint="手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:singleLine="true">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_password_bindPhone"
        style="@style/RegisterAndLogin"
        android:background="@drawable/shap_home_gridview"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="5dip"
        android:singleLine="true" />

    <Button
        android:id="@+id/bt_bindPhone"
        style="@style/RegisterAndLogin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shap_redbutton_commit"
        android:onClick="onLogin"
        android:text="绑定"
        android:textColor="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="right"
            android:text="跳过绑定，"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_click_login_bindPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:paddingLeft="5dp"
            android:text="立即登录"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
